<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="470dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/llight_mal">

    <DatePicker
        android:id="@+id/date_piker"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:calendarTextColor="@color/white"
        android:datePickerMode="calendar"
        android:headerBackground="@color/light_mal"
        android:headerMonthTextAppearance="@style/MyHeaderMonthTextAppearance"
        android:headerYearTextAppearance="@style/MyHeaderYearTextAppearance"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/date_piker_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/monsesrat"
        android:background="@drawable/universal_button"
        android:text="ОК"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/date_piker"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>