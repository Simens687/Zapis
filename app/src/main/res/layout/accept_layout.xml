<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/llight_mal"
    >

    <TextView
        android:id="@+id/ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Все нормально?"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/monsesrat"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/monsesrat"
        android:background="@drawable/universal_button"
        android:text="нет"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ask"
        app:layout_constraintStart_toStartOf="@id/ask"
        android:layout_marginTop="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/monsesrat"
        android:background="@drawable/universal_button"
        android:text="да"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ask"
        app:layout_constraintEnd_toEndOf="@id/ask"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>